{
  "name": "fake-theta",
  "private": true,
  "description": "RICOH THETA Web API simulator",
  "license": "MIT",
  "scripts": {
    "deploy": "vercel",
    "deploy:prod": "vercel --prod",
    "format": "prettier --write --loglevel silent \"**/*.{json,md}\"",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "prepare": "husky install",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vercel/node": "^2.9.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "sort-package-json": "^2.4.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vercel": "^28.11.1"
  },
  "engines": {
    "node": "18.x"
  }
}
